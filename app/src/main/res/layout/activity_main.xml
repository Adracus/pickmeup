<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    style="@style/AppTheme">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/tramperin_fotolia"
        android:id="@+id/background_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="@string/pickmeup_button"
        android:id="@+id/pickmeup_button"
        android:textSize="13pt"
        android:elevation="2dp"
        android:textColor="@android:color/white"
        android:background="@color/brand_color"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/background_image"
        android:layout_marginBottom="150dp"
        android:layout_marginRight="60dp"
        android:onClick="startPickMeUpActivity"
        android:capitalize="characters" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="@string/driver_button"
        android:id="@+id/driver_button"
        android:textSize="13pt"
        android:elevation="2dp"
        android:textColor="@android:color/white"
        android:background="@color/brand_color"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="60dp"
        android:onClick="startDriverActivity"
        android:capitalize="characters"
        android:layout_alignTop="@+id/pickmeup_button" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/select_mode"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/pickmeup_button"
        android:layout_marginBottom="70dp"
        android:layout_marginLeft="0dp"
        android:background="#ff615f60"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginRight="120dp"
        android:textSize="13pt" />


</RelativeLayout>
