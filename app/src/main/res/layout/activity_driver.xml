<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/driver_activity"
    tools:context="com.pickmeupscotty.android.activities.DriverActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        android:src="@drawable/cockpit"
        android:id="@+id/steering_wheel" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/waiting_pickup_request"
            android:id="@+id/textView"
            android:textSize="40dp"
            android:autoText="false"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="#aaffffff"
            android:textColor="#555555"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="20dp"
            android:paddingTop="20dp" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/waiting_pickup_request_additional"
            android:id="@+id/textView2"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:background="#aaffffff"
            android:textColor="#555555"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp" />
    </LinearLayout>

</RelativeLayout>
